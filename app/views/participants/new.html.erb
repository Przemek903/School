<div class="container-fluid">
	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-3">
			<h2><%= image_tag("test.jpg", size: "300x200", class: "img-circle") %></h2>
		</div>
		<div class="col-md-5">
			<h1><strong><%= @course.name %></strong></h1>	
		</div>
		<div class="col-md-1"></div>
	</div>
	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-7">
		<h3>O kursie:</h3>
		<p><%= @course.description %></p>
		<h3>Czy na pewno chcesz dołączyć do kursu <strong><%= @course.name %></strong> ?</h3>
		<%= form_for [@course, @participant] do |f| %>
		
			<%= f.hidden_field :grade, :value => 0 %>

			<%= f.hidden_field :user_id, :value => current_user.id %>
			<%= f.hidden_field :course_id, :value => params[:course_id] %>

			<div class="actions">
	    		<%= f.submit "Tak", :class => "btn btn-primary" %>
	  		</div>
	  		<%= link_to "Nie", root_path, class: "btn btn-danger" %>

		<% end %>
		</div>
		<div class="col-md-4"></div>
		<div class="col-md-1"></div>
	</div>
</div>